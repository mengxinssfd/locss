._ {
  &.pos-fixed, &.fixed {
    position: fixed;
  }
  &.pos-static, &.static {
    position: static;
  }
  &.pos-abs, &.abs {
    position: absolute;
  }
  &.pos-rel, &.relative {
    position: relative;
  }
  &.pos-sticky, &.sticky {
    position: sticky;
  }
  // .left-0{left:0;} .left-p100{left: 100%;}...
  for d in top bottom left right {
    &.{d + '-0'} {
      {d}: 0;
    }
    &.{d + '-p100'} {
      {d}: 100%;
    }
  }
  &.astronaut {
    @extends ._.fixed;
    top: -99999999px;
    left: -99999999px;
  }
  // ↑
  &.abs-t {
    @extends ._.abs, ._.top-0;
  }
  // ↓
  &.abs-b {
    @extends ._.abs, ._.bottom-0;
  }
  // ←
  &.abs-l {
    @extends ._.abs, ._.left-0;
  }
  // →
  &.abs-r {
    @extends ._.abs, ._.right-0;
  }
  // ←↑
  &.abs-tl {
    @extends ._.abs-t, ._.abs-l;
  }
  // ↑→
  &.abs-tr {
    @extends ._.abs-t, ._.abs-r;
  }
  // ←↓
  &.abs-bl {
    @extends ._.abs-b, ._.abs-l;
  }
  // ↓→
  &.abs-br {
    @extends ._.abs-b, ._.abs-r;
  }
  // ←→
  &.lr-c {
    @extends ._.left-0, ._.right-0;
    margin-left: auto;
    margin-right: auto;
  }
  // ↑↓
  &.tb-c {
    @extends ._.top-0, ._.bottom-0;
    margin-top: auto;
    margin-bottom: auto;
  }
  &.trans-c {
    left: 50%;
    transform: translateX(-50%);
  }
  &.trans-vc {
    top: 50%;
    transform: translateY(-50%);
  }
  // ←→↑↓
  &.trans-c-c {
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
}